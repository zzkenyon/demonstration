<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <bean id="dataSource" class="com.pd.helloworld.ioc.ComboPooledDataSource"
          scope="singleton" autowire="byName" lazy-init="true" init-method="" primary="true" factory-method="" factory-bean="">
        <constructor-arg index="0" name="" type="" value=""/>
        <constructor-arg index="1" name="" type="" value=""/>
        <property name="driverClass" value="com.mysql.jdbc.Driver"/>
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/eportal?useUnicode=true"/>
    </bean>
</beans>